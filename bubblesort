#include<iostream>
using namespace std;
class bubsort{
public:
void swapping(int &a, int &b) {
   int temp;
   temp = a;
   a = b;
   b = temp;
}
void displayyyy(int *array, int size) {
   for(int i = 0; i<size; i++)
      cout << array[i] << " ";
   cout << endl;
}
void bubbles(int *array, int size) {
   for(int i = 0; i<size; i++) {
      int swapped = 0;
      for(int j = 0; j<size-i-1; j++) {
         if(array[j] > array[j+1]) {
            swapping(array[j], array[j+1]);
            swapped = 1;
         }
      }
      if(!swapped)
         break;
   }
}};

int main() {
   int n;
   cout << "Enter the number of elements: ";
   cin >> n;
   int arr[n];
   cout << "Enter elements:" ;
   for(int i = 0; i<n; i++) {
      cin >> arr[i];
   }
   cout << "Array before Sorting: ";
   bubsort bs;
   bs.displayyyy(arr, n);
   bs.bubbles(arr, n);
   cout << "Array after Sorting: ";
   bs.displayyyy(arr, n);
}
